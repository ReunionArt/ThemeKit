                    "<i class='icon--sm margin-right-xxs material-icons-outlined color-contrast-low'>local_shipping</i>" + 
                    "<p>FREE shipping and FREE returns</p>" + 
                    "</div>" + 
                    "<div class='pill color-contrast-medium margin-bottom-xxs'>" + 
                    "<i class='icon--sm margin-right-xxs material-icons-outlined color-contrast-low'>monetization_on</i>" + 
                    "<p class='affirm-as-low-as' data-page-type='product' data-amount='{{ variant.price }}' data-affirm-type='text' data-learnmore-show='true'></p>" + 
                    "</div>" + 
                "</div>";
            document.querySelector("div[data-order-summary-section='payment-lines']").append(txt3);
        });

