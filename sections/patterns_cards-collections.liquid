<div class="article-wrapper-lg wrapper--xl pb80">

  <div class="grid grid--1-1 cards cards--activity mobile--true-grid"> 
    {% for block in section.blocks %}
      {% if block.settings.image != blank %}
        <article class="article-tile article-tile--md width-1-1 text-light">
            <a href="{{ block.settings.link }}" itemprop="url">
              <div class="article-media filter-top lazyloaded" style="background-image: url( {{ block.settings.image |  img_url: '600x' }} );" title="{{ alt | escape }}">
                <h4 class="heading--h4"> {{ block.settings.title }} </h4>
                <p class="body-text--caption semibold text-light--sub b10" > Shop {{ block.settings.title }} ➞</p>
              </div>
            </a>
          </article>
        {% endif %}
      {% endfor %}
    </div>

  <div class="grid grid--2-2 cards cards--activity mobile--false-grid"> 
    {% for block in section.blocks %}
      {% if block.settings.image != blank %}
        <article class="article-tile article-tile--md width-1-1 text-light">
          <a href="{{ block.settings.link }}" itemprop="url">
            <div class="article-media filter-top lazyloaded" style="background-image: url( {{ block.settings.image |  img_url: '600x' }} );" title="{{ alt | escape }}">
              <h4 class="heading--h4"> {{ block.settings.title }} </h4>
              <p class="body-text--caption semibold text-light--sub b10" > Shop {{ block.settings.title }} ➞</p>
            </div>
          </a>
        </article>
      {% endif %}
    {% endfor %}
  </div>

</div>


{% schema %}
  {
    "name": "Collections Cards",
    "class": "image-gallery-section filter-map--white",
    "max_blocks": 4,
    "settings": [
            {
        "type": "range",
        "id": "grid-size",
        "label": "Images per row",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 4,
        "info": "Vertical masonry and classic only"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "800 x 800px recommended"
          },
            {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Collection name",
          "default": "Collection name"
        }
        ]
      }
    ],
     "presets": [
      {
        "name": "Collections",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}
