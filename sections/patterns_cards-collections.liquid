<div class="article-wrapper-lg wrapper--xl">

  <div class="flex flex-column flex-row@md padding-sm"> 
    {% for block in section.blocks %}
      {% if block.settings.image != blank %}

      <a href="{{ block.settings.link }}" itemprop="url" class="card-v9 radius-md margin-bottom-sm margin-sm@lg {{ block.settings.background_color }}" aria-labelledby="card-title-1" style="background-image: url( {{ block.settings.image |  img_url: '350x' }} );" title="{{ alt | escape }}">
        <div class="card-v9__content padding-md">
          <div class="padding-bottom-xxxl max-width-xxs">
            <p class="color-white color-opacity-50% text-uppercase"> {{ block.settings.overline}} </p>
            <h2 id="card-title-1" class="text-xl color-white"> {{ block.settings.title }} </h2>
          </div>
          
          <div class="margin-top-auto">
            <span class="card-v9__btn btn"><span>Shop {{ block.settings.title }}&nbsp;âžž</span></span>
          </div>
        </div>
      </a>

      {% endif %}
    {% endfor %}
  </div>

</div>








