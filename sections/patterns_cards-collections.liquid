            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "800 x 800px recommended"
          },
          {
            "type": "color",
             "id": "color_title",
             "label": "Background color",
             "default": "#FFFFFF"
           },
            {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "overline",
          "label": "Overline",
